<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ACCESS CONTAINERS</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
  </head>
  <body>
    <div class="d-flex vh-100 login">
      <div class="container">

        <div class="row" id="eta">

          <div class="col">
            <div class="card my-auto">
              <div class="card-body">
                <form class="" action="/home" method="POST">
                  <div class="row">
                    <div class="col col-lg-6 col-md-6 col-sm-12">
                      <h5>FROM   </h5> <input type="date" name="from" value="<%= from %>" id="from">
                    </div>
                    <div class="col col-lg-6 col-md-6 col-sm-12">
                      <h5>TO   </h5> <input type="date" name="to" value="<%= to %>" id="to">
                    </div>
                    <div class="col-12">
                      <button type="submit" name="refresh" class="btn btn-success" id="refresh">REFRESH</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

        </div>

        <div class="row" id="cont">
          <div class="col">
            <div class="card my-auto">
              <div class="card-body">
                <h4>CONTAINERS</h4>
                <br>
                <br>
                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th class="cell" scope="col">CONTAINER #</th>
                      <th class="cell" scope="col">ARRIVED</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i =0; i < cntrs.length; i++) { %>
                      <tr>
                        <td class="cell"> <a href="/container/<%= cntrs[i].CONTAINERNUMBER %>"><%= cntrs[i].CONTAINERNUMBER %></a> </td>
                        <td class="cell"><%= cntrs[i].ARRIVED %></td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>

              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
    <script src="/scripts/home-scripts.js" type="text/javascript"></script>
  </body>
</html>
